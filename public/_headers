# Cache Headers for Static Assets
# Optimizes repeat visit performance by caching immutable assets
# Est. Savings: 402 KiB on repeat visits (from Lighthouse audit)

# Hashed JavaScript/CSS bundles - Cache forever (immutable)
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

/assets/*.css
  Cache-Control: public, max-age=31536000, immutable

# Fonts - Cache forever (immutable, won't change)
/fonts/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/fonts/*.woff
  Cache-Control: public, max-age=31536000, immutable

# Images - Cache for 1 year with revalidation
/assets/images/*
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

# HTML files - No cache (always fresh)
/*.html
  Cache-Control: public, max-age=0, must-revalidate

/
  Cache-Control: public, max-age=0, must-revalidate

# Service Worker - No cache (needs to update immediately)
/sw.js
  Cache-Control: public, max-age=0, must-revalidate

# Manifest and other meta files
/manifest.json
  Cache-Control: public, max-age=86400, must-revalidate

/robots.txt
  Cache-Control: public, max-age=86400, must-revalidate

# API routes (if any) - No cache
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0
